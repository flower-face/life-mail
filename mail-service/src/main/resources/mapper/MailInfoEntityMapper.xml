<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zz.mail.mapper.MailInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zz.mail.entity.MailInfoEntity">
        <result column="id" property="id"/>
        <result column="created" property="created"/>
        <result column="updated" property="updated"/>
        <result column="receiver" property="receiver"/>
        <result column="mail_subject" property="mailSubject"/>
        <result column="mail_content" property="mailContent"/>
        <result column="file_path" property="filePath"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        created,
        updated,
        receiver, mail_subject, mail_content, file_path
    </sql>

</mapper>
